<div id="promotions">
    <h3 class="pt-4 font-weight-bold text-uppercase product-details-subtitle"><%= Spree.t(:promotions) %></h3>
    <% promotions.each do |promotion| %>
    <div class="row">
        <div class="col-12 col-md-7 col-lg-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <h4><%= promotion.descripition %></h4>
                    <p><%= promotion.name %></p>
                    <p><%= promotion.code %></p>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>